rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Block by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Example: public read-only metrics (if needed)
    // match /publicMetrics/{docId} {
    //   allow read: if true;
    // }
  }
}